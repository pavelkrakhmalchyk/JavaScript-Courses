<mvc:View 
controllerName="sap.ui.demo.walkthrough.controller.Detail" 
  xmlns="sap.m" 
  xmlns:l="sap.ui.layout" 
  displayBlock="true"
  xmlns:mvc="sap.ui.core.mvc">
	<Shell>
    <App id="detail" class="sapUiSizeCompact" >
      <pages>
        <Page showNavButton = "true"
          navButtonPress = ".onNavBack">
          <content>
            <Panel id="PeopleDetailPanel" headerText="{i18n>page2HeaderText}">
              <VBox headerText="{people>UserName}">
                <Text text="FirstName:    {people>FirstName}" />
                <Text text="LastName:    {people>LastName}" />
                <Text text="Gender:    {people>Gender}" />
                <Text text="Emails:   {people>Emails}" />
              </VBox>  
            </Panel>
          </content>
        </Page>
      </pages>
    </App>
	</Shell>
</mvc:View>